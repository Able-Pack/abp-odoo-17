<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="report_product_barcode_template">
            <t t-call="web.html_container">
                <div class="text-center" style="margin: 20px auto;">
                    <h2>
                        <t t-esc="o['product_name']"/>
                    </h2>
                    <div style="margin: 20px 0;">
                        <img t-if="o['barcode']" t-att-src="'/report/barcode/EAN13/%s' % (o['barcode'])" alt="Barcode"/>
                        <h3 t-else="">Empty Barcode</h3>
                    </div>
                    <h2>
                        <t t-esc="o['barcode']"/>
                    </h2>
                </div>
            </t>
        </template>

        <template id="report_product_barcode">
            <t t-call="web.basic_layout">
                <t t-foreach="data" t-as="item">
                    <div class="page" style="page-break-after:always;">
                        <t t-call="abp_product_barcode.report_product_barcode_template">
                            <t t-set="o" t-value="item"/>
                        </t>
                    </div>
                </t>
            </t>
        </template>

        <record id="abp_product_barcode_format" model="report.paperformat">
            <field name="name">ABP paper format for barcode</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">33</field>
            <field name="page_width">33</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <!--<field name="header_spacing">35</field>-->
            <field name="dpi">300</field>
        </record>

    </data>
</odoo>