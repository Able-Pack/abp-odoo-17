<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit account.move.template form view -->
        <record id="account_move_template_form_inherit" model="ir.ui.view">
            <field name="name">account.move.template.form.inherit.abp_schedule_journal_entry_template</field>
            <field name="model">account.move.template</field>
            <field name="inherit_id" ref="account_move_template.account_move_template_form"/>
            <field name="arch" type="xml">
                <!-- Add schedule date field after journal field -->
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="post_schedule_date"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit account.move.template tree view -->
        <record id="account_move_template_tree_inherit" model="ir.ui.view">
            <field name="name">account.move.template.tree.inherit.abp_schedule_journal_entry_template</field>
            <field name="model">account.move.template</field>
            <field name="inherit_id" ref="account_move_template.account_move_template_tree"/>
            <field name="arch" type="xml">
                <!-- Add schedule date field after journal field -->
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="post_schedule_date"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
