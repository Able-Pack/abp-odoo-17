<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit company form view to add QR image field -->
        <record id="res_company_form_inherit_qr_image" model="ir.ui.view">
            <field name="name">res.company.form.inherit.qr.image</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website']" position="before">
                    <field name="invoice_qr_image" widget="image" 
                           options="{'size': [90, 90]}"
                           />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
