<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="target_group_tree_view" model="ir.ui.view">
            <field name="name">target.group.tree.view</field>
            <field name="model">target.group</field>
            <field name="arch" type="xml">
                <tree string="Target Groups">
                    <field name="name"/>
                    <field name="commission_type"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>

        <record id="target_group_form_view" model="ir.ui.view">
            <field name="name">target.group.form.view</field>
            <field name="model">target.group</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Target Group">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="commission_type"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="target_lines" string="Targets">
                                <div>
                                <br/>
                                    <field name="target_lines" nolabel="1">
                                        <tree editable="bottom">
                                            <field name="min_target"/>
                                            <field name="max_target"/>
                                            <field name="amount" column_invisible="parent.commission_type != 'amount'"/>
                                            <field name="amount_percentage" column_invisible="parent.commission_type == 'amount'" />
                                        </tree>
                                    </field>
                                </div>
                            </page>
                            <page string ='Sale Person'>
                                <field name='target_id'>
                                    <tree editable="bottom">
                                        <field name='sale_name_id'/>
                                    </tree>
                                </field>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_target_group">
            <field name="name">Target Groups</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">target.group</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="target_commission" name="Sale Commission Target" parent="sale.sale_menu_root"
            sequence="66" action="bi_emp_sales_target_ent.action_target_group"/>
    </data>
</odoo>